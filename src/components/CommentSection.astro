---
import Section from "./Comments/Section.svelte";
import { getLangFromUrl } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);

type Props = {
  pageId: string;
  pageUrl: string;
  pageTitle: string;
};
const { pageId, pageUrl, pageTitle } = Astro.props;

// aqui devemos identificar a lang automaticamente e passar como parametro do componente
---

<Section
  client:only="svelte"
  attrs={{
    appId: "63fc45f6-55c7-48fa-8483-2f440928cf1b",
    pageId: pageId,
    pageUrl: pageUrl,
    pageTitle: pageTitle,
    lang={lang}
  }}
/>
