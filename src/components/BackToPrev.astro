---
type Props = {
  href: string;
};

const { href } = Astro.props;
---

<a
  href={href}
  class="group relative flex w-fit flex-nowrap border border-black py-1.5 pl-7 pr-3 hover:bg-black hover:text-white dark:border-white dark:hover:bg-white dark:hover:text-black"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 24 24"
    class="absolute left-2 top-1/2 size-4 -translate-y-1/2 fill-none stroke-current stroke-2"
  >
    <line
      x1="5"
      y1="12"
      x2="19"
      y2="12"
    ></line>
    <polyline
      points="12 5 5 12 12 19"
    ></polyline>
  </svg>
  <div class="font-serif text-sm font-bold">
    <slot />
  </div>
</a>
