---
import { cn } from "@lib/utils";

type Props = {
  href: string;
  external?: boolean;
  underline?: boolean;
};

const { href, external, underline = true, ...rest } = Astro.props;
---

<a
  href={href}
  target={external ? "_blank" : "_self"}
  class={cn(
    "inline-block decoration-black dark:decoration-white text-current hover:text-black hover:dark:text-white",
    underline && "underline underline-offset-2",
  )}
  {...rest}
>
  <slot />
</a>
